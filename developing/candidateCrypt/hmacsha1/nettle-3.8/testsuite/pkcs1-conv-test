#! /bin/sh

if [ -z "$srcdir" ] ; then
  srcdir=`pwd`
fi

[ -x ../tools/pkcs1-conv$EXEEXT ] || exit 77

# Private RSA key, generated by openssl
$EMULATOR ../tools/pkcs1-conv >testkey.priv <<EOF || exit 1
